<div class='profile'>
	<h1 class="main" style="display:inline">
		<%= gravatar_for @user%>
		<%= @user.name %>
	</h1>
	
	<% if @user.microposts.any? %>
		<% @user.microposts.each do |mp|%>
			<table class="microposts" summary="user micrposts">
				<%= render 'microposts/microposts', :mp => mp %>
			</table>
		<% end %>
		<%= will_paginate @microposts %>
	<% end %>
</div>
<div class="sidebar round">
	<strong>URL: </strong><%= link_to user_path(@user), @user %><br />
	<strong>Member for: </strong><%= time_ago_in_words(@user.created_at) %><br />
	<strong>No. of posts: </strong><%= @user.microposts.count %><br />
</div>


