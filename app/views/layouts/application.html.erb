<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
	<%= render 'layouts/stylesheets' %>
	<%= csrf_meta_tag %>
</head>
<body>
	<div class="container">	
		<%= render 'layouts/header' %>
		<section class = 'round'>
			<% flash.each do |key, val| %>
				<div class = "flash round <%= key %>"><%= val %></div>
			<% end %>
			<%= yield %> 
		</section>
		<%= render 'layouts/footer'%>
	</div>
	<%= debug(params) if Rails.env.development? %>
</body>
</html>
